  height: 270px;
  background: linear-gradient(142.81deg, #6651E7 21.57%, #D624EB 62.63%);
  box-shadow: 7.00236px 0px 11.0037px rgba(0, 0, 0, 0.25);
  border-radius: 10.0034px;
  padding: 30px 10px 20px 20px;
  +above($breakpoints.sm)
    height: 244px;
  +above($breakpoints.lg)
    padding: 43px 28px
    height: 305px;
  span
    color: white
    display block
    &:first-child
      font-family: "Geometria-Bold"
      font-size: 20px;
      line-height: 26px;
      max-width: 366px
      margin-bottom: 18px
      +above($breakpoints.lg)
