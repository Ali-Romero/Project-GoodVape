.main-section
  position relative

  &__bg
    position relative
    z-index 1
    background-image: url('../images/main-section-bg.png')
    background-repeat: no-repeat
    background-color: #010B1C;
    background-size: cover
    +above($breakpoints.sm)
      background-position: top
    +above($breakpoints.xxl)
      background-size: auto
    +above($breakpoints.xxxxxxl)
      background-size: cover

  &__inner
    padding: 16px 0 40px 0
    color: white
    +above($breakpoints.sm)
      padding: 30px 0 40px 0
    +above($breakpoints.lg)
      padding: 70px 0 50px 0
  &__title
    position relative
    z-index 1
    margin-bottom: 32px
    +above($breakpoints.lg)
      margin-bottom: 53px
    br
      display: block
    &:before
      content: ""
      position: absolute
      background: #6D4EE7;
      bottom: 0
      left: -22px
      z-index -1
      filter: blur(106.5px);
      width: 242px;
      height: 60px;
      +above($breakpoints.sm)
        left: -80px
      +above($breakpoints.lg)
        left: -114px
        filter: blur(198.5px);
        height: 113px
        width 363px
  &__info-description
    max-width: 464px
    font-family: "Geometria-Medium"
    font-size: 13px;
    line-height: 16px;
    padding-left: 16px
    position relative
    margin-bottom: 40px
    +above($breakpoints.sm)
      font-size: 15px;
      line-height: 19px;
      padding-left: 19px
    +above($breakpoints.lg)
      margin-bottom: 53px
      max-width: 676px
      padding-left: 29px
      font-size: 23px;
      line-height: 29px;
    &:before
      content: ""
      position: absolute
      top: 2px
      bottom: 2px
      width: 2.19089px
      background-color: rgba(255, 255, 255, 0.22);
      border-radius: 10px
      left: 0
      margin: auto 0
      +above($breakpoints.sm)
        top: 2px
        bottom: 2px
      +above($breakpoints.lg)
        top: 6px
        bottom: 6px

  &__info
    +above($breakpoints.sm)
      margin-bottom: 35px
  &__info-list
    +above($breakpoints.sm)
      display: flex
      max-width: 428px
      justify-content: space-between
    +above($breakpoints.lg)
      max-width: 560px
    .slick-list
      max-width: 250px
      margin: 0 auto
      +above($breakpoints.sm)
        margin: 0
        max-width: 100%
    .slick-track
      +above($breakpoints.sm)
        width 428px !important
        display: flex 
        justify-content: space-between
      +above($breakpoints.lg)
        width 560px !important
      &:before,
      &:after
        +above($breakpoints.sm)
          content: none
    .slick-slide
      min-width: 270px
      +above($breakpoints.sm)
        min-width: auto
    .slick-dots
      display: flex
      justify-content: center
      li
        margin-right: 20px
        &:last-child
          margin-right: 0
      button
        font-size: 0
        border: none
        width: 10px
        height: 10px
        border-radius: 100%
        padding: 0
        margin: 0
        background-color: #e1e1e1
      .slick-active
        button
          background-color: #D624EB

  &__info-list-item
    min-width: 250px
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      min-width: 110px
    +above($breakpoints.lg)
      min-width: 137px
    div
      font-size: 18px;
      line-height: 20 px;
      color: #6651E7;
      font-family: "Geometria-Bold"
      margin-bottom: 7px
      +above($breakpoints.lg)
        font-size: 20px;
        line-height: 25px;
    span
      font-size: 14px;
      line-height: 16px;
      display block
      +above($breakpoints.lg)
        font-size: 16px;
        line-height: 20px;
  
  &__btn-mobile
    max-width: 240px
    height: 47px
    margin: 0 auto 20px auto
    +above($breakpoints.sm)
      display: none
  &__feedback
    display: none
    +above($breakpoints.sm)
      display: block
