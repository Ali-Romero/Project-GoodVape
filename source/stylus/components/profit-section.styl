.profit-section
  position relative
  z-index 1
  background-color: #051225
  +above($breakpoints.sm)
    background-image: url('../images/profit-bg-img.jpg')
    background-repeat: no-repeat
    background-size: auto
    background-position: right
    background-position-y: center
  +above($breakpoints.xxxl)
    background-size: 1700px 100%;
  +above($breakpoints.xxxxxl)
    background-size: 1920px auto;
  &:before
    +above($breakpoints.sm)
      content: ""
      position: absolute
      width 100%
      height: 100%
      background-color: rgba(5, 18, 37, 0.82)
      z-index 1
    +above($breakpoints.lg)
      background-color: rgba(5, 18, 37, 0.52)
    +above($breakpoints.xxxl)
      content: none
  &:after
    content: ""
    position: absolute
    width 100%
    height: 100%
    z-index 1
    top: 0
    background-image: url('../images/decor-dots-3.svg')
    background-repeat: no-repeat
    background-size: 58px 168px;
    background-position-y: 00;
    background-position-x: calc(0% - 6px);
    +above($breakpoints.sm)
      background-size: 143px 357px;
      background-position-y: 217px;
      background-position-x: calc(0% - 23px);
    +above($breakpoints.xxxxl)
      background-size: 264px 572px;
      background-position-y: 217px;
      background-position-x: calc(0% - 48px);
    +above($breakpoints.xxxxxl)
      background-size: 264px 572px;
      background-position-y: 217px;
      background-position-x: calc(0% - 48px);
  &__inner
    position relative
    z-index 2
    padding: 50px 0 60px 0
    +above($breakpoints.lg)
      padding: 64px 0 78px 0
  &__title
    max-width: 390px
    margin: 0 auto 19px auto
    +above($breakpoints.lg)
      text-align: left
      max-width: 616px
      margin: 0 0 19px 0
  &__title-info
    max-width: 620px
    margin: 0 auto 39px auto
    +above($breakpoints.lg)
      text-align: left
      margin: 0 0 39px 0
      max-width: 759px
  &__calc
    // 
.profit-calc
  &__btn-container
    max-width: 458px
    width 100%
    display: flex
    align-items: center
    margin: 0 auto 50px auto
    position relative
    +above($breakpoints.lg)
      max-width: 578px
      margin: 0 0 50px 0
    &:before
      content: ""
      position: absolute
      left: 0
      right 0
      top: 0
      bottom 0
      border-radius: 7px
      border: 1px solid white
      pointer-events: none

  &__btn
    max-width: 248px
    min-height: 56px
    width 100%
    height: 100%
    display: flex
    justify-content: center
    align-items: center
    text-align: center
    font-size: 15px;
    line-height: 18px;
    font-family: "Geometria-Medium"
    border-radius: 7px
    cursor: pointer
    transition: 0.3s
    +above($breakpoints.lg)
      font-size: 16px;
      line-height: 20px;
      font-size: 16px;
      line-height: 20px;
      max-width: 289px
      min-height: 76px
    &.active
      background-color: white
      color: #051125;
  &__wrapper
    position relative
    min-height: 400px
    +above($breakpoints.sm)
      min-height: 416px
    +above($breakpoints.lg)
      min-height: 510px
.calc
  position: absolute
  max-width: 480px
  margin: 0 auto
  left: 0
  right 0
  width 100%
  opacity 0
  z-index 1
  transition: 0.3s
  +above($breakpoints.lg)
    margin: 0
    max-width: 599px
  &.active
    opacity 1
    z-index 2
  & .irs
    &.irs--big
      height: 72px
      +above($breakpoints.lg)
        height: 75px
        top: 6px
    & .irs-grid-pol
      display: none
    & .irs-handle
    & .single
        background: white
        box-shadow: 0px 0px 15px #7E64EA;
        width 24px
        height: 24px
        border: 0
        border-radius: 100%
        cursor: pointer
        +above($breakpoints.lg)
          width 26px
          height: 26px
        &:before
          content: ""
          position: absolute
          width 13px
          height: 13px
          border-radius: 100%
          top: 0
          bottom: 0
          left: 0
          right 0
          margin: auto
          background: linear-gradient(142.81deg, #6651E7 21.57%, #D624EB 62.63%);
          border: 5px solid #FFFFFF;
          +above($breakpoints.lg)
            border: 6px solid #FFFFFF;
    & .irs-line
        background: #232E40;
        border-radius: 40px;
        border: 0
        height: 8px
    & .irs-bar--single
      background: #6C4EE7;
      border-radius: 40px;
      border: 0
      box-shadow: none
      height: 8px
    & .irs-grid-text
      font-size: 13px;
      line-height: 13px;
      color: rgba(255, 255, 255, 0.34);
      font-family: "Geometria-Regular"
      font-weight: 400
      +above($breakpoints.sm)
        font-size: 14px;
        line-height: 14px;
      +above($breakpoints.lg)
        font-size: 15px;
        line-height: 15px;
  &__input
    position relative
    margin-bottom: 26px
    cursor pointer
    +above($breakpoints.lg)
      padding-bottom: 5px
      margin-bottom: 37px
  &__input-text
    position: absolute
    font-size: 16px;
    line-height: 16px;
    +above($breakpoints.lg)
      font-size: 18px;
      line-height: 18px;
  // &__input-label
  &__total
    // 
  &__total-item
    display: flex
    align-items: center
    justify-content: space-between
    font-size: 16px;
    line-height: 18px;
    font-family: "Geometria-Regular"
    padding: 12px 0
    +above($breakpoints.sm)
      font-size: 18px;
      line-height: 24px;
    +above($breakpoints.lg)
      font-size: 23px;
      line-height: 29px;
      padding: 20px 0
    &:first-child
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    br
      display: block

.calc-info
  position: absolute
  max-width: 484px
  width 100%
  z-index 1
  opacity 0
  transition: 0.3s
  left: 0
  right 0
  margin: 0 auto
  +above($breakpoints.lg)
    margin: 0
    max-width: 670px
  &.active
    opacity 1
    z-index 2
  ul
    li
      height: 60px
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      display: flex
      justify-content: space-between
      align-items: center
      font-size: 15px;
      line-height: 17px;
      font-family: "Geometria-Medium"
      +above($breakpoints.sm)
        font-size: 16px;
        line-height: 18px;
      +above($breakpoints.lg)
        height: 78px
        font-size: 20px;
        line-height: 25px;
      &:last-child
        border: 0
      br
        display: block
  &__title
    font-size: 18px;
    line-height: 24px;
    font-family: "Geometria-Medium"
    margin-bottom: 16px
    text-align: center
    +above($breakpoints.sm)
      font-size: 20px;
      line-height: 26px;
    +above($breakpoints.lg)
      margin-bottom: 20px
      font-size: 25px;
      line-height: 31px;