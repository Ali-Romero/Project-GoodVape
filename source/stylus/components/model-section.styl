.model-section
  background-color: #051125;
  position relative
  z-index 1
  &:before
    content: ""
    position: absolute
    width 100%
    height: 100%
    z-index -1
    background-image: url('../images/decor-dots-1.svg'),
      url('../images/decor-dots-2.svg')
    background-repeat: no-repeat
    background-size: 310px 176px, 194px 176px;
    background-position-y: 389px, 914px;
    background-position-x: calc(0% - 154px), calc(100% - -104px);
    +above($breakpoints.lg)
      background-size: 373px 176px, 277px 189px;
      background-position-y: 465px, 1194px;
      background-position-x: calc(0% - 80px), calc(100% - -104px);
    +above($breakpoints.xxxxxl)
      background-size: 572px 264px, 572px 264px
      background-position-y: 415px, 914px
      background-position-x: calc(0% - 80px), calc(100% - -286px)
  .wrapper
    +above($breakpoints.lg)
      max-width: 1274px
  &__image
    position relative
    z-index 1
    &:before
      content: ""
      position: absolute
      left: 0
      right 0
      margin: 0 auto
      z-index -1
      background: #6d4ee7;
      top: 484px;
      width: 156px;
      height: 136px;
      filter: blur(62.5px);
      +above($breakpoints.sm)
        top: 370px;
        width: 366px;
        height: 205px;
        filter: blur(119.5px);
      +above($breakpoints.lg)
        width: 363px
        height: 195px
        filter: blur(198.5px);
        top: 524px

  &__inner
    padding: 44px 0 50px 0
    +above($breakpoints.xl)
      padding: 57px 0 60px 0
  &__title
    margin-bottom: 4px
    +above($breakpoints.lg)
      margin-bottom: 8px
    +above($breakpoints.xl)
      margin-bottom: 11px
    br
      display: block
      +above($breakpoints.sm)
        display: none
  &__title-info
    max-width: 611px
    margin: 0 auto 24px auto
    +above($breakpoints.lg)
      font-size: 16px;
      line-height: 20px;
      max-width: 100%
      margin: 0 auto 33px auto
    +above($breakpoints.xl)
      margin: 0 auto 44px auto
      font-size: 17px;
      line-height: 21px;

  &__product-title
    max-width: 618px
    margin: 0 auto 60px auto
    font-size: 14px;
    line-height: 18px;
    font-family: "Geometria-Bold"
    text-align: center;
    +above($breakpoints.sm)
      font-size: 17px;
      line-height: 22px;
    +above($breakpoints.lg)
      margin: 0 auto 80px auto
      max-width: 697px
      font-size: 20px;
      line-height: 25px;
  &__product
    margin-bottom: 35px
    max-width: 1170px
    margin: 0 auto 35px auto
    +above($breakpoints.sm)
      position relative
    ul
      position relative
      height: 376px
      margin-bottom: 30px
      +above($breakpoints.sm)
        margin-bottom: 0
        height: 400px
      +above($breakpoints.lg)
        height: 579px
      &:before
        content: ""
        position: absolute
        width 100%
        height: 100%
        background-image: url('../images/model-product-image.png')
        background-repeat: no-repeat
        background-size: 290px auto;
        background-position: calc(50% - 0px);
        background-position-y: 67px;
        pointer-events: none
        +above($breakpoints.sm)
          background-size: 480px auto
          background-position: calc(50% - 27px);
          background-position-y: 0px;
        +above($breakpoints.lg)
          background-size: 723px auto
          background-position: calc(50% - 36px);
          background-position-y: 0px;
      li
        position: absolute
        font-family: "Geometria-Medium"
        font-size: 15px;
        line-height: 20px;
        +above($breakpoints.lg)
          font-size: 18px;
          line-height: 23px;
        &:before
          content: ""
          position: absolute
          background-repeat: no-repeat
          background-size: cover
        &:nth-child(1)
          left: 0
          top: 12px
          +above($breakpoints.lg)
            top: 22px
          &:before
            +above($breakpoints.sm)
              width: 287px;
              height: 44px;
              bottom: -47px;
              left: 0
              background-image: url('../images/model-pointer-line-1.svg')
            +above($breakpoints.lg)
              width 360px
              height: 60px
              bottom: -67px
        &:nth-child(2)
          right: 0
          top: 52px
          text-align: right
          +above($breakpoints.sm)
            top: 12px
          +above($breakpoints.lg)
            top: 22px
          &:before
            +above($breakpoints.sm)
              width: 241px;
              height: 37px;
              bottom: -39px;
              right: 0;
              background-image: url('../images/model-pointer-line-2.svg')
            +above($breakpoints.lg)
              width 355px
              height: 91px
              bottom: -96px
        &:nth-child(3)
          left: 0
          bottom: 42px
          text-align: left
          +above($breakpoints.sm)
            bottom: 9px
          &:before
            +above($breakpoints.sm)
              width: 268px;
              height: 49px;
              bottom: -3px;
              left 0
              background-image: url('../images/model-pointer-line-3.svg')
            +above($breakpoints.lg)
              width 360px
              height: 62px
              bottom: -7px
        &:nth-child(4)
          right: 0
          bottom: 2px
          text-align: left
          +above($breakpoints.sm)
            bottom: 9px
          &:before
            +above($breakpoints.sm)
              width: 272px;
              height: 94px;
              bottom: -4px;
              right 0
              background-image: url('../images/model-pointer-line-4.svg')
            +above($breakpoints.lg)
              width 433px
              height: 133px
              bottom: -7px
  &__product-helper-info
    font-size: 14px;
    line-height: 16px;
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      position absolute
      right: 0
      top: 182px
      max-width: 176px
      font-size: 15px;
      line-height: 17px;
    +above($breakpoints.lg)
      max-width: 246px
      font-size: 20px;
      line-height: 25px;
      top: 258px

  &__statistic
    margin-bottom: 8px
  &__format
    ul
      display: flex
      justify-content: space-between
      flex-wrap: wrap
      max-width: 1158px
      margin: 0 auto
      li
        margin-bottom: 20px;
        max-width: 369px;
        width 100%
        +above($breakpoints.sm)
          min-height: 133px;
        +above($breakpoints.lg)
          margin-bottom: 40px
          max-width: 559px
          min-height: 154px
  &__format-title
    font-size: 16px;
    line-height: 22px;
    text-transform: uppercase;
    font-family: "Geometria-Bold"
    max-width: 1158px;
    margin: 0 auto 34px auto
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      font-size: 18px;
      line-height: 24px;
    +above($breakpoints.lg)
      font-size: 22px;
      line-height: 28px;
    span
      color: #D624EB
.model-statistic
  display: flex
  max-width: 1172px
  margin: 0 auto
  position relative
  +above($breakpoints.sm)
    padding: 26px 0 30px 0
  +above($breakpoints.lg)
    padding: 34px 0 41px 0
  &:before
    content: ""
    position: absolute;
    background-image: url(../images/graph-img.png);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 300px auto;
    width: 317px;
    height: 379px;
    right: 0;
    top: -38px;
    left: 0;
    margin: 0 auto;
    pointer-events: none
    +above($breakpoints.sm)
      margin: 0
      left: auto
      width: 398px;
      height: 379px;
      right: -92px;
      top: -83px;
      background-size: 366px auto;
    +above($breakpoints.lg)
      width: 513px;
      height: 468px;
      right: -100px;
      top: -83px;
      background-size: 519px auto;
  &__container
    max-width: 500px
    +above($breakpoints.sm)
      margin-right: 38px
    +above($breakpoints.lg)
      max-width: 799px
      margin-right: 64px
  &__head
    margin-bottom: 30px
    font-family: "Geometria-Bold"
    font-size: 15px;
    line-height: 18px;
    +above($breakpoints.sm)
      font-size: 16px;
      line-height: 20px;
      display: flex
      justify-content: space-between
    +above($breakpoints.lg)
      font-size: 20px;
      line-height: 25px;

  &__head-title
    max-width: 259px
    width 100%
    margin: 0 auto 200px auto
    text-align: center
    position relative
    +above($breakpoints.sm)
      text-align: left
      margin: 0
    div
      font-size: 18px;
      line-height: 22px;
      margin-bottom: 3px
      +above($breakpoints.lg)
        font-size: 22px;
        line-height: 28px;
        margin-bottom: 6px
    span
      display block
    &:before
      content: ""
      position: absolute
      background: #6D4EE7;
      top: 0
      bottom 0
      right 0
      left: 0
      margin: auto
      width: 280px;
      height: 64px;
      filter: blur(88.5px);
      pointer-events: none
      +above($breakpoints.sm)
        filter: blur(103.5px);
        left: -20px
      +above($breakpoints.lg)
        width 363px
        height: 121px
        filter: blur(198.5px);
        left: -50px
  &__head-gender
    width 100%
    max-width: 250px
    margin: 0 auto
    +above($breakpoints.sm)
      margin: 0
      max-width: 160px
    +above($breakpoints.lg)
      max-width: 200px
    ul
      display: flex
      justify-content: space-between
      &:first-child
        color: #D624EB;
        margin-bottom: 4px
        +above($breakpoints.lg)
          margin-bottom: 14px
      li
        margin-right: 12px
        +above($breakpoints.lg)
          margin-right: 20px
        &:last-child
          margin-right: 0
  &__info
    padding: 15px 0
    font-size: 13px;
    line-height: 16px;
    border-top: 1px solid #FFFFFF;
    border-bottom: 1px solid #FFFFFF;
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      padding: 20px 0
      font-size: 14px;
      line-height: 18px;
    +above($breakpoints.lg)
      padding: 40px 0
      font-size: 17px;
      line-height: 21px;

.model-format
  background-color: #091E41;
  border-radius: 5px;
  padding: 30px 10px 18px 17px;
  position: relative
  width 100%
  height: 100%
  cursor pointer
  transition: 0.3s
  position relative
  z-index 222
  -webkit-tap-highlight-color: transparent;
  +above($breakpoints.sm)
    padding: 12px 10px 18px 17px;
  +above($breakpoints.lg)
    padding: 25px 10px 15px 25px
  &:hover
    z-index 999
    transform: scale(1.06)
    line-height: 1
    position relative
    background-color: #0F2D5F;

  &__container
    // 
  &__title
    font-size: 16px;
    line-height: 25px;
    padding-bottom: 10px;
    color: #D425EA;
    font-family: "Geometria-Bold"
    +above($breakpoints.lg)
      font-size: 20px;
      line-height: 25px;
      padding-bottom: 20px
  &__info
    font-size: 13px;
    line-height: 17px;
    +above($breakpoints.lg)
      font-size: 17px;
      line-height: 22px;
  &__square
    position: absolute
    right: 0
    top: 0
    min-width: 138px;
    min-height: 25px;
    font-size: 13px;
    line-height: 18px;
    text-align: center
    color: #061226;
    background-color: #FFFFFF;
    border-radius: 0px 5px 0px 0px;
    display: flex
    justify-content: center
    align-items: center
    +above($breakpoints.lg)
      min-width 205px
      min-height: 39px
      font-size: 18px;
      line-height: 24px;
