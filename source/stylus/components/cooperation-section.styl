.cooperation-section
  background-image: url('../images/cooperation-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  overflow: unset
  +above($breakpoints.sm)
    background-position: center
  +above($breakpoints.xxl)
    background-size: auto
  +above($breakpoints.xxxxxxl)
    background-size: cover
  &__inner
    padding: 45px 0 40px 0
    +above($breakpoints.sm)
      position relative
      padding: 65px 0 134px 0
    +above($breakpoints.lg)
      padding: 75px 0 228px 0
  &__title
    max-width: 592px
    margin: 0 0 21px 0
    +above($breakpoints.lg)
      max-width: 819px
  &__title-info
    max-width: 582px
    margin-bottom: 40px
    +above($breakpoints.lg)
      max-width: 882px
  &__cards-title
    font-size: 17px;
    line-height: 20px;
    font-family: "Geometria-Medium"
    margin: 0 0 22px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: left
    +above($breakpoints.lg)
      font-size: 20px;
      line-height: 25px;
      margin: 0 0 22px 0
  &__cards
    margin-bottom: 30px
    +above($breakpoints.sm)
      margin-bottom: 0
  &__cards-list
    +above($breakpoints.sm)
      display: flex
      justify-content: space-between
      flex-wrap: wrap
      max-width: 544px
    +above($breakpoints.lg)
      max-width: 1160px
    .slick-list
      max-width: 262px
      margin: 0 auto
      border-radius: 10.0034px;
      +above($breakpoints.sm)
        max-width: 100%
        margin: 0
    .slick-slide
      max-width: 280px
      width 100%
      +above($breakpoints.sm)
        max-width: 282px
      +above($breakpoints.lg)
        max-width: 298px
    .slick-dots
      display: flex
      justify-content: center
      li
        margin-right: 20px
        &:last-child
          margin-right: 0
      button
        font-size: 0
        border: none
        width: 10px
        height: 10px
        border-radius: 100%
        padding: 0
        margin: 0
        background-color: #e1e1e1
      .slick-active
        button
          background-color: #D624EB
  &__cards-list-item
    max-width: 262px;
    min-height: 258px;
    width 100%
    background: linear-gradient(142.81deg, #6651E7 21.57%, #D624EB 62.63%);
    border-radius: 10.0034px;
    padding: 31px 10px 31px 20px
    +above($breakpoints.sm)
      max-width: 262px;
      min-height: 242px;
      margin-bottom: 20px
      padding: 26px 8px 19px 15px;
    +above($breakpoints.lg)
      padding: 31px 10px 31px 20px
      margin-bottom: 0
      max-width: 266px
      min-height: 306px
    div
      &:first-child
        font-size: 16px;
        line-height: 19px;
        font-family: "Geometria-Bold"
        margin-bottom: 12px
        +above($breakpoints.lg)
          font-size: 18px;
          line-height: 23px;
          margin-bottom: 12px
      &:last-child
        font-size: 15px;
        line-height: 18px;
        font-family: "Geometria-Medium"
        +above($breakpoints.lg)
          font-size: 16px;
          line-height: 20px;

  &__feedback
    width: 100%
    +above($breakpoints.sm)
      position: absolute
      bottom: -27px
    +above($breakpoints.lg)
      bottom: -38px
    .feedback
      filter: drop-shadow(0px 4px 15px rgba(0, 0, 0, 0.25));
    .feedback__title
      +above($breakpoints.lg)
        font-size: 23px;
        line-height: 29px;
