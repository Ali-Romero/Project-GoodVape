@font-face
  font-family: "Arial"
  src: url('../fonts/arial.woff'), url('../fonts/arial.woff2')
  font-display: swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

.page
  display: flex
  flex-direction: column
  min-height: 100%
  &--thanks
    background-repeat: no-repeat
    background-position: top
    background-color: #1e1e1e;
    background-image: url('../images/thanks-section-bg.jpg')
    background-size: cover
    .connection__description
      font-size: 12px
      line-height: 15px

  &__content
    flex: 1
    &--layout
      display: flex
      justify-content: center
      align-items: center
      flex-direction: column

  &__header
    &--default
      background-image: url('../images/main-section-bg.jpg')
      background-repeat: no-repeat
      background-position: center
      background-size: cover
      position relative
      z-index 1
      &:before
        content: ""
        position: absolute
        width 100%
        height: 100%
        background-color: rgba(0, 0, 0, 0.5)
        z-index -1
        +above($breakpoints.sm)
          content: none