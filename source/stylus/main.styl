@font-face
  font-family: "Geometria-Light"
  src: url('../fonts/Geometria-Light.woff'), url('../fonts/Geometria-Light.woff2')
  font-display: swap
@font-face
  font-family: "Geometria-Regular"
  src: url('../fonts/Geometria-Regular.woff'), url('../fonts/Geometria-Regular.woff2')
  font-display: swap
@font-face
  font-family: "Geometria-Medium"
  src: url('../fonts/Geometria-Medium.woff'), url('../fonts/Geometria-Medium.woff2')
  font-display: swap
@font-face
  font-family: "Geometria-Bold"
  src: url('../fonts/Geometria-Bold.woff'), url('../fonts/Geometria-Bold.woff2')
  font-display: swap

@font-face
  font-family: 'als_rublregular';
  src: url('../fonts/rouble-webfont.woff2') format('woff2'), url('../fonts/rouble-webfont.woff') format('woff')
  font-weight: normal
  font-style: normal
  font-display: swap

@import 'common/variables'
@import 'common/*'
@import 'components/*'

.page
  display: flex
  flex-direction: column
  min-height: 100%
  &--thanks
    background-color: #010B1C;
    background-image: url('../images/main-section-bg.png')
    background-repeat: no-repeat
    background-size: auto
    background-position: center
    position relative
    z-index 1
    &:before
      content: ""
      position: absolute
      width: 100%
      height: 100%
      z-index -1
      background-image: url('../images/person-photo.png')
      background-repeat: no-repeat
      background-size: 300px auto;
      background-position: calc(50% - 0px);
      background-position-y: calc(50% - -46px);
      +above($breakpoints.sm)
        background-size: 438px auto;
        background-position: calc(50% - -233px);
        background-position-y: calc(50% - 190px);
      +above($breakpoints.lg)
        background-size: 600px auto;
        background-position: calc(50% - -233px);
        background-position-y: calc(50% - 20px);
      +above($breakpoints.xxl)
        background-position: calc(50% - -347px);
        background-position-y: calc(50% - 20px);
        background-size: auto
    .connection
      color: white
      &__description
        font-size: 13px
        line-height: 14px
        +above($breakpoints.sm)
          font-size: 14px
          line-height: 16px
          margin-left: 16px
      &__icon-header
        svg
          color: rgba(255, 255, 255, 0.2);

  &__content
    flex: 1
    &--layout
      display: flex
      justify-content: center
      align-items: center
      flex-direction: column
