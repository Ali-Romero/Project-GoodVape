.wrapper
  max-width: 320px
  margin: 0 auto
  padding-right: 10px
  padding-left: 10px
  +above($breakpoints.sm)
    max-width: 1184px
    margin: 0 auto
    padding-right: 20px
    padding-left: 20px


.text-red
  color: $color-red

.d-flex
  display: flex

.d-block
  display: block

.d-i-block
  display: inline-block

.mr-8
  margin-right 8px

.mr-20
  margin-right 20px

.mb-5
  margin-bottom 5px

.pl-20
  padding-left: 20px


.red-link
  color: $color-red
  &:hover
    color: $color-red

.black-link
  color: $color-black
  &:hover
    color: $color-black
