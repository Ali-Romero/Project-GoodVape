.wrapper
  max-width: 300px
  margin: 0 auto
  width 100%
  +above($breakpoints.sm)
    max-width: 760px
  +above($breakpoints.lg)
    max-width: 1160px

h1,
.title
  font-size: 18px
  line-height: 25px
  text-align: center
  text-transform: uppercase;
  +above($breakpoints.sm)
    font-size: 24px
    line-height: 30px
    text-align: left
  +above($breakpoints.lg)
    font-size: 37px;
    line-height: 47px;
    color: #FFFFFF;
  &__color
    color: #6D4EE7
h2
  font-size: 20px
  line-height: 28px
  text-align: center

  +above($breakpoints.sm)
    font-size: 28px
    line-height: 38px
  +above($breakpoints.md)
    font-size: 35px
    line-height: 42px
  +above($breakpoints.lg)
    font-size: 48px
    line-height: 54px

.d-flex
  display: flex

.d-block
  display: block

.d-i-block
  display: inline-block
